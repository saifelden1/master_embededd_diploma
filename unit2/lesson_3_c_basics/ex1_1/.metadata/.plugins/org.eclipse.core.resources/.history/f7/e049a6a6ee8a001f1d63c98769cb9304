#include <stdio.h>
int a =0;
int main(){
	printf("enter the number: ");
	fflush(Stdout);
	scanf("%d",a);

	if(a%2==0){
		printf("the number %d is even",a);
		fflush(stdout);
	}else{
		printf("the number %d is odd",a);
		fflush(stdout);
	}

	return 0;
}
