#include<stdio.h>
#include<math.h>


int reverse(int num,int rev_num)
{
	int x;
	int new_num;

	if (num == 0)
	{
	        return rev_num;
	}

			x = num % 10;
			new_num = num/10;
			rev_num = rev_num*10 + x;

			return	reverse(new_num,count,rev_num);


}





int main()
{
	int number;
	int reverse_num;
printf("enter the number to be reversed");
fflush(stdout);
scanf("%d",&number);

counter = count(number);
reverse_num = reverse(number,,0);
printf("revresed number is %d",reverse_num);

return 0;
}

