#include <stdio.h>

int find1to100(int result,int num)
{
	if(num<=100)
	{
	result =result+num;
	find1to100(result,num+1);
	return result;
	}
}

int main() {

    printf("the sum from 1 to 100 is: %d\n", find1to100(0,1));


    return 0;
}



